<div class="container text-center">
  <h1>Display List</h1>
  <div class="container py-5 text-start">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div class="bg-white rounded p-3 shadow" >
    <ul>
    <% @list.bookmarks.each do | bookmark | %>
    <li><%= bookmark.comment %></li>
    <li><%= bookmark.movie.title %></li>
    <h2><%= link_to "Delete Bookmark?", bookmark_path(bookmark), class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></h2>
    <% end %>
    </ul>
        </div>
      </div>
    </div>
  </div>
  <h2><%= link_to "Return to List", lists_path, class: "btn btn-success" %></h2>
  <h2><%= link_to "Add new bookmark", new_list_bookmark_path(@list), class: "btn btn-info" %></h2>
</div>
